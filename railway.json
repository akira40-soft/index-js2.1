{
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile.railway"
  },
  "deploy": {
    "startCommand": "node index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "RAILWAY_ENVIRONMENT": "true",
        "PINO_NO_PRETTY": "true"
      }
    }
  }
}
